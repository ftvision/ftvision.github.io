{
    "name": "ftvision-hugo-site",
    "version": "1.0.0",
    "description": "Hugo site with Tailwind CSS",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently \"npm run css:watch\" \"hugo serve\"",
        "build": "npm run css:build && hugo --minify",
        "css:build": "tailwindcss -i ./themes/ft_personal/assets/css/input.css -o ./themes/ft_personal/static/css/style.css --minify",
        "css:watch": "tailwindcss -i ./themes/ft_personal/assets/css/input.css -o ./themes/ft_personal/static/css/style.css --watch",
        "serve": "hugo serve"
    },
    "keywords": [
        "hugo",
        "tailwindcss",
        "blog",
        "static-site"
    ],
    "author": "Feitong Yang",
    "license": "MIT",
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.15",
        "concurrently": "^8.2.2",
        "tailwindcss": "^3.4.0"
    }
}